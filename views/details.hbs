<main>
  <h1>{{products.name}}</h1>
  <img class="cube" src="{{products.imageUrl}}">
  <div class="details">
    <p><span>Description:</span>{{products.description}}</p>
    <p><span>Difficulty level:</span> {{products.difficultyLevel}}</p>
    <a class="btn" href="/products">Back</a>
    {{#if user}}
    <a class="btn" href="/products/{{products._id}}/attach">Attach</a>
    {{/if}}
    {{!-- {{#if isAuthenticated}} --}}
      {{!-- 
      <a class="btn" href="/products/{{product._id}}/edit">Edit</a>
      <a class="btn" href="/products/{{product._id}}/delete">Delete</a> --}}
    {{!-- {{/if}} --}}
  </div>
  <h2>Accessories</h2>
  
  <div class="accessories">
    {{#each products.accessories}}
      {{> accessory}}   
    {{else}}
      <h3 class="italic">This cube has no accessories yet...</h3>
    {{/each}}
  </div>
</main>