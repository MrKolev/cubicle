<main>
  <h1>Login Form</h1>
  <div class="form">
    <form action="/auth/login" method="POST">
      <label for="username">Username</label>
      <input {{#if username}}value="{{data.username}}" {{else}}class="err-input" {{/if}} type="text" id="username"
        name="username">
      <label for="password">Password</label>
      <input {{#unless password}} class="err-input" {{/unless}} type="password" id="password" name="password">
      {{#if error}}
      <span class="error">{{error.message}}</span>
      {{/if}}
      <input type="submit" value="Login">
    </form>
  </div>
</main>