<main>
  <h1>Register Form</h1>
  {{#if error}}
  <span class="error">{{error.message}}</span>
  {{/if}}

  <div class="form">
    <form action="/auth/register" method="POST">
      <label for="username">Username</label>
      <input {{#if username}}value="{{data.username}}" {{else}}class="err-input" {{/if}} type="text" id="username"
        name="username" value="{{username}}">

      <label for="password">Password</label>
      <input {{#unless password}} class="err-input" {{/unless }} type="password" id="password" name="password">
      <label for="repeatPassword">Re-Password</label>
      <input {{#unless repeatPassword}} class="err-input" {{/unless }} type="password" id="repeatPassword"
        name="repeatPassword">
      <label for="email">Email</label>
      <input {{#if email}}value="{{data.email}}" {{else}}class="err-input" {{/if}} type="text" id="email" name="email">
      <input type="submit" value="Register">
    </form>
  </div>
</main>